function geraCitação(){
    var inNome = document.getElementById("inNome");
    var outCitação = document.getElementById("outCitação")

    var nome = inNome.value;
    if(nome=="" || nome.indexOf("") == -1){
        alert("Informe o nome completo do autor...");
        inNome.focus();
        return;

    }
    var priEspaco = nome.indexOf("");
    var ultEspaco = nome.lastIndexOf("");

    var citação = nome.substr(0,priEspaco) + nome.substr(ultEspaco)

    outCitação.texContent = "citação:" + citação;
}
var btGerar = document.getElementById("btGerar");
btGerar.addEventListener("click",geraCitação); 

</script>












    <h1>Nome do autor na Referência</h1>
    <p>Nome do autor:
        <input type="text" id="inNome">
    </p>
    <input type="button" value="Gerar Biografia" id="btGerar">
    <h3 id="outCitação"></h3>
    <script> src="js/Citação.js"</script>
